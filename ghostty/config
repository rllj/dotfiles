# Custom patch of the Zed font: https://mutsuntsai.github.io/fontfreeze/
font-family = Zed Plex Mono Slashed
font-size   = 16

window-padding-x = 0
window-padding-y = 0

theme = gruvbox.conf
#theme = rose-pine-dawn
background-opacity = 1
macos-non-native-fullscreen = visible-menu
